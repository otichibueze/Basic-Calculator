<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/divider"
    android:showDividers="end"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/displayEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:text=""
        android:textAppearance="?android:textAppearanceLarge"
        android:hint="0"
        android:paddingTop="48dp"
        android:textSize="48sp"
        android:gravity="right"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:columnCount="4">

        <Button
            android:id="@+id/clearButton"
            android:layout_width="0dp" android:layout_height="0dp"
            android:layout_columnWeight="1" android:layout_rowWeight="1"
            android:layout_columnSpan="3"
            android:text="CLEAR" android:textSize="@dimen/text_size"
            style="@style/RectangleButtonStyle"
            />

        <Button
            android:id="@+id/divideButton"
            android:layout_width="0dp" android:layout_height="0dp"
            android:layout_columnWeight="1" android:layout_rowWeight="1"
            android:text="/" android:textSize="@dimen/text_size"
            style="@style/RectangleButtonStyle"
            />

        <Button
            android:id="@+id/button7"
            android:layout_width="0dp" android:layout_height="0dp"
            android:layout_columnWeight="1" android:layout_rowWeight="1"
            android:text="7" android:textSize="@dimen/text_size"
            style="@style/RectangleButtonStyle"
            />

        <Button
            android:id="@+id/button8"
            android:layout_width="0dp" android:layout_height="0dp"
            android:layout_columnWeight="1" android:layout_rowWeight="1"
            android:text="8" android:textSize="@dimen/text_size"
            style="@style/RectangleButtonStyle"
            />

        <Button
            android:id="@+id/button9"
            android:layout_width="0dp" android:layout_height="0dp"
            android:layout_columnWeight="1" android:layout_rowWeight="1"
            android:text="9" android:textSize="@dimen/text_size"
            style="@style/RectangleButtonStyle"
            />

        <Button
            android:id="@+id/multiplyButton"
            android:layout_width="0dp" android:layout_height="0dp"
            android:layout_columnWeight="1" android:layout_rowWeight="1"
            android:text="*" android:textSize="@dimen/text_size"
            style="@style/RectangleButtonStyle"
            />

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp" android:layout_height="0dp"
            android:layout_columnWeight="1" android:layout_rowWeight="1"
            android:text="4" android:textSize="@dimen/text_size"
            style="@style/RectangleButtonStyle"
            />

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp" android:layout_height="0dp"
            android:layout_columnWeight="1" android:layout_rowWeight="1"
            android:text="5" android:textSize="@dimen/text_size"
            style="@style/RectangleButtonStyle"
            />

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp" android:layout_height="0dp"
            android:layout_columnWeight="1" android:layout_rowWeight="1"
            android:text="6" android:textSize="@dimen/text_size"
            style="@style/RectangleButtonStyle"
            />

        <Button
            android:id="@+id/subtractButton"
            android:layout_width="0dp" android:layout_height="0dp"
            android:layout_columnWeight="1" android:layout_rowWeight="1"
            android:text="-" android:textSize="@dimen/text_size"
            style="@style/RectangleButtonStyle"
            />

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp" android:layout_height="0dp"
            android:layout_columnWeight="1" android:layout_rowWeight="1"
            android:text="1" android:textSize="@dimen/text_size"
            style="@style/RectangleButtonStyle"
            />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp" android:layout_height="0dp"
            android:layout_columnWeight="1" android:layout_rowWeight="1"
            android:text="2" android:textSize="@dimen/text_size"
            style="@style/RectangleButtonStyle"
            />

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp" android:layout_height="0dp"
            android:layout_columnWeight="1" android:layout_rowWeight="1"
            android:text="3" android:textSize="@dimen/text_size"
            style="@style/RectangleButtonStyle"
            />

        <Button
            android:id="@+id/addButton"
            android:layout_width="0dp" android:layout_height="0dp"
            android:layout_columnWeight="1" android:layout_rowWeight="1"
            android:text="+" android:textSize="@dimen/text_size"
            style="@style/RectangleButtonStyle"
            />

        <Button
            android:id="@+id/button0"
            android:layout_width="0dp" android:layout_height="0dp"
            android:layout_columnWeight="1" android:layout_rowWeight="1"
            android:layout_columnSpan="2"
            android:text="0" android:textSize="@dimen/text_size"
            style="@style/RectangleButtonStyle"
            />

        <Button
            android:id="@+id/dotButton"
            android:layout_width="0dp" android:layout_height="0dp"
            android:layout_columnWeight="1" android:layout_rowWeight="1"
            android:text="." android:textSize="@dimen/text_size"
            style="@style/RectangleButtonStyle"
            />

        <Button
            android:id="@+id/equalButton"
            android:layout_width="0dp" android:layout_height="0dp"
            android:layout_columnWeight="1" android:layout_rowWeight="1"
            android:text="=" android:textSize="@dimen/text_size"
            style="@style/RectangleButtonStyle"
            />


    </GridLayout>
</LinearLayout>